<!-- SIDEBAR TO NAVIGATE THROUGH ALL THE CAREERS -->
<div class="sidenavbar" id="sidemenu">
	{{#each careerTitle}}
		<a href="#">{{this}}</a>
	{{/each}}
</div>

<!-- GROUP CONTAINER TO HOLD THE CAREERS HOLDERS -->
<div class="group-container" id="group-container-id">
	{{#each careers}}
		<!-- HOLDS THE TEXT AND INFO -->
		<div class="text-holder">
			<!-- HEADER OF THE TEXT -->
			<div class="text-career-header">
				<h3>{{this.title}}</h3>
			</div>
			<!-- TEXT PARAGRAPHS -->
			<div class="text-paragraph">
				<div class="small">
					<p class="text-expand-min">{{this.discription}}</p>
				</div>
				<p>Educations Level: {{this.education}}</p>
				<p>Average Salary: {{this.salary}}</p>
			</div>
			<!-- THE READ MORE BUTTON -->
			<div class="text-read-more">
				<p><a class="read-more button button1" href="/occupations/{{this.title}}/info">Read More</a></p>
			</div>
		</div>
	{{/each}}
	<!-- FOR FLOATING PURPOSES -->
	<div style="clear:both;"></div>
</div>